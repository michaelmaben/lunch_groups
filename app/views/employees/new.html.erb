
<% content_for :title do %>Employee<% end %>
<h3>Create Employee</h3>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<div class="form">
<%= form_with model: @employee, class: "employee_form", local: true do |f| %>
  <%= f.text_field :badge_id %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <% options = options_from_collection_for_select(@departments, 'id', 'name') %>
  <%= f.select :department_id,  options %>
  <%= f.submit "Create" %>
<% end %>
</div>
